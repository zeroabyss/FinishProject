<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/title_background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y96"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/x63"
        android:layout_height="@dimen/y49"
        android:layout_marginLeft="@dimen/x30"
        android:src="@drawable/about_back"
        android:id="@+id/title_has_back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_has_title"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>

    <ImageView
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/x63"
        android:layout_height="@dimen/y49"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x30"
        android:src="@drawable/about_ok"
        android:id="@+id/title_has_ok"/>
</RelativeLayout>