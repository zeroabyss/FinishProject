<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/note_recycler_shape"
    android:layout_margin="@dimen/x10"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/note_recycler_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:textStyle="bold"
            android:textColor="@color/recycler_title_color"
            android:textSize="@dimen/y36"
            android:id="@+id/note_recycler_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:id="@+id/note_recycler_content"
            android:textColor="@color/recycler_content_color"
            android:textSize="@dimen/y32"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/y5"
            android:layout_marginBottom="@dimen/y5"
            android:background="#EEEEEE"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_height="wrap_content"
            android:id="@+id/note_recycler_time"
            android:textColor="@color/recycler_content_color"
            android:textSize="@dimen/y20"/>
    </LinearLayout>

</LinearLayout>